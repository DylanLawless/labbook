# Labbook: cd to labbook directory
alias labbook='cd ~/labbook'

# Master edit: Open master file and current main file with vim in 2 tabs
alias cl="vim -p \
    ~/labbook/main/contents_1.tex \
    ~/labbook/labbook_2020.tex"

# Quick entry: Add a quick one line entry to the main contents file
# If it is the first entry today, a new section date will be added also.
alias clq='sh ~/labbook/.quicklog.sh'

# Quick look: Print the last 5 lines of the main contents file.
alias clt='tail -5 ~/labbook/main/contents_1.tex'

